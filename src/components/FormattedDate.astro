---
interface Props {
  date: Date;
}

const { date } = Astro.props;
const yyyy = date.getFullYear();
const mm = String(date.getMonth() + 1).padStart(2, '0'); // 月份从0开始
const dd = String(date.getDate()).padStart(2, '0');
const formatted = `${yyyy}-${mm}-${dd}`;
---

<time datetime={date.toISOString()}>
  {formatted}
</time>

